/**app.wxss**/
page{
  height:100%;
  width:100%;
  overflow-x: hidden;
  background-color:#252429;
}

cover-view canvas,camera,map,video{
  width:100%;height:100%
}

.container {
  width:100%;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color:#252429;
  justify-content: space-between;
  padding: 0 0;
  box-sizing: border-box;
} 

.flex{
  display:flex;
}

.flex-column{
  flex-direction: column
}

.flex-row{
  display:flex;
  flex-direction: row
}

.font24{
  font-size:24rpx;
}
.font26{
  font-size:26rpx;
}
.font28{
  font-size:28rpx;
}
.font30{
  font-size:30rpx;
}
.font32{
  font-size:32rpx;
}
.font36{
  font-size:35rpx;
}
.font38{
  font-size:37rpx;
}
.font42{
  font-size:32rpx;
}

.black {
  color : #000
}

.white {
  color :#fff
}

.pale {
  color : #6E6D79
}

.red {
  color : red
}

.green {
  color : green
}

.green2{
  color :#31C77B
}

.lightGreen {
  color : #90EE90
}

.brown{
  color : #98652F
}

.violet{
  color : #453897
}

.width50{
  margin:0;width:50%
}

.width100{
  width:100%
}

.fixedBlock{
  position : fixed;
  z-index : 99
}

.flex-flow-row{
  display: flex;
  flex-flow : row
}

.justifyCenter{
  display:flex;
  justify-content: center;
}

.justifyBetween{
  display:flex;
  justify-content: space-between;
}

.justifyEnd{
  display:flex;
  justify-content: flex-end;
}

.leftText{
  justify-content:flex-start;
  align-items:flex-start;
}

.rightText{
  justify-content:flex-end;
  align-items:flex-end;
}

.centerText{
  justify-content:center;
  align-items:center;
}

.rotate180{
  transform : rotate(180deg)
}

.listHead{
  width:100%;
  display:flex;font-size:27rpx;
  justify-content: space-between;
  color:#D3D2D8;align-items:center;
  text-align:center;
  padding:15rpx 20rpx 15rpx 0;
  background-color:#3B3D4A
}

.rows{
  display:flex;align-items:center;
  text-align:center;font-size:27rpx;
  /* padding:15rpx 0 15rpx 0; */
  justify-content: space-between;
  border-bottom: 1px solid #3D3F4C;
  height:90rpx;
  color:#B9B9C2
}

.rows .center{
  justify-content:center;
  align-items:center;
}

.fixedIconGroup{
  border:0;width:100%;z-index:-1;
  height:150rpx;bottom:0;
}

.fiexdIcon{
  width:110rpx;height:110rpx;
  font-size:36rpx;font-weight:800;
  border-radius:110rpx;
  text-align:center;z-index:999;
  background-color:#fff;
}

.iconSup{
  width:50rpx;height:50rpx;font-size:30rpx;
  border-radius:50rpx;background-color:red;
  z-index:999;
}

.weight800{
  font-weight:800
}

.cardGroup{
  width:100%;color:#fff;
  background-color:#232531;
  padding:0 20rpx 20rpx 20rpx
}

.card{
  background-color:#2A2C39;
  margin:35rpx 40rpx 0 40rpx;
  border-radius:15rpx
}

.card>view{
  padding:30rpx;
}

.cardTitle{
  color:#fff;
  font-size:33rpx
}

.bottomBorder{
  border-bottom:1px solid #3D3F4C
}

.marginTop10{
  margin-top:10rpx
}

.chartGroup{
  height:550rpx;
  min-height:550rpx
}

